{
  "name": "gatk_apply_variant_recalibration",
  "title": "GATK Apply Variant Recalibration",
  "summary": "Runs ApplyRecalibration Module of GATK",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "details": {
    "contactUrl": "http://wiki.dnanexus.com/Apps/gatk_apply_variant_recalibration"
  },
  "resources": [],
  "inputSpec": [
    {
      "label": "VCF Files",
      "optional": false,
      "name": "vcf_files",
      "class": "array:file"
    },
    {
      "label": "Reference",
      "optional": false,
      "name": "reference",
      "class": "file"
    },
    {
      "default": 95.0,
      "label": "Filter Level (% specificity)",
      "optional": true,
      "name": "filter_level",
      "class": "float"
    },
    {
      "label": "Tranches File",
      "optional": false,
      "name": "tranches_file",
      "class": "file"
    },
    {
      "label": "Recalibration File",
      "optional": false,
      "name": "recalibration_file",
      "class": "file"
    },
    {
      "default": "-mode SNP",
      "label": "Parameters",
      "optional": true,
      "name": "params",
      "class": "string"
    }
  ],
  "outputSpec": [
    {
      "name": "recalibrated_variants",
      "class": "file"
    }
  ],
  "runSpec": {
    "interpreter": "python2.7",
    "file": "src/gatk_apply_variant_recalibration.py",
    "execDepends": [{"name": "openjdk-6-jre-headless"}]
  }
}
