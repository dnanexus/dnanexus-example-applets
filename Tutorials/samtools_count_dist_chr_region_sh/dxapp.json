{
  "name": "samtools_count_dist_chr_region_sh",
  "title": "SAMtools distributed count by region (bash)",
  "summary": "Shell implementation",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "mappings_sorted_bam",
      "label": "Sorted mappings",
      "class": "file",
      "patterns": [
        "*.bam"
      ],
      "help": "A coordinate-sorted BAM format file."
    },
    {
      "name": "mappings_sorted_bai",
      "label": "Sorted mappings index",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.bai"
      ],
      "help": "(Optional) Index file for BAM."
    }
  ],
  "outputSpec": [
    {
      "name": "counts_txt",
      "class": "file",
      "label": "Read count file",
      "patterns": [
        "*.txt"
      ],
      "help": "Output file with Total reads as the first line."
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/code.sh",
      "timeoutPolicy": {
    "*": {
      "hours": 12
    }
  },
    "systemRequirements": {
      "*": {
        "instanceType": "mem1_ssd1_x2"
      }
    },
    "distribution": "Ubuntu",
    "release": "14.04",
    "execDepends": [
      {"name": "samtools"}
    ]
  }
}
