{
  "name": "samtools_count_catmkfifo_sh",
  "title": "SAMtools Streaming Count",
  "summary": "SAMtools count using `dx cat` download stream and mkfifo files (bash)",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "mappings_bam",
      "label": "Mapping",
      "class": "file",
      "patterns": [
        "*.bam"
      ],
      "help": "BAM format file."
    }
  ],
  "outputSpec": [
    {
      "name": "counts_txt",
      "class": "file",
      "label": "Read count file",
      "patterns": [
        "*.txt"
      ],
      "help": "Output file with total reads as the first line."
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/code.sh",
    "timeoutPolicy": {
      "*": {
        "hours": 12
      }
    },
    "systemRequirements": {
      "*": {
        "instanceType": "mem1_ssd1_x2"
      }
    },
    "distribution": "Ubuntu",
    "release": "14.04"
  }
}
