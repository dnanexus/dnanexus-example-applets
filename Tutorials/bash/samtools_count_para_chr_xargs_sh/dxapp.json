{
  "name": "samtools_count_para_chr_xargs_sh",
  "title": "Parallel xargs by Chr",
  "summary": "SAMtools parallel count using xargs",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "mappings_bam",
      "label": "Mapping",
      "class": "file",
      "patterns": ["*.bam"],
      "help": "BAM format file."
    },
    {
      "name": "view_options",
      "label": "Count options",
      "class": "string",
      "optional": true,
      "default": "",
      "patterns": [
        "*.bam"
      ],
      "help": "Additonal options to be used with SAMtools view -c."
    }
  ],
  "outputSpec": [
    {
      "name": "counts_txt",
      "class": "file",
      "label": "Read count file",
      "patterns": [
        "*.txt"
      ],
      "help": "Output file with Total reads as the first line."
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/code.sh",
  "timeoutPolicy": {
    "*": {
      "hours": 3
    }
  },
    "systemRequirements": {
      "*": {
        "instanceType": "mem1_ssd1_x2"
      }
    },
    "distribution": "Ubuntu",
    "release": "14.04"
  }
}
