{
  "name": "samtools_count_distr_chr_slice_sh",
  "title": "Distributed by Chr (sh)",
  "summary": "This applet performs a distributed SAMtools count for each canonical chromosome",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "mappings_sorted_bam",
      "label": "Sorted mappings",
      "class": "file",
      "patterns": [
        "*.bam"
      ],
      "help": "A coordinate-sorted BAM format file."
    },
    {
      "name": "mappings_sorted_bai",
      "label": "Sorted mappings index",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.bai"
      ],
      "help": "(Optional) Index file for BAM."
    }
  ],
  "outputSpec": [
    {
      "name": "counts_txt",
      "class": "file",
      "label": "Read count file",
      "patterns": [
        "*.txt"
      ],
      "help": "Output file with total reads as the first line."
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/code.sh",
    "timeoutPolicy": {
      "*": {
        "hours": 5
      }
    },
    "systemRequirements": {
      "main": {
        "instanceType": "mem1_ssd1_x4"
      },
      "count_func": {
        "instanceType": "mem1_ssd1_x2"
      },
      "sum_reads": {
        "instanceType": "mem1_ssd1_x4"
      }
    },
    "execDepends": [{"name": "samtools"}],
    "distribution": "Ubuntu",
    "release": "14.04"
  }
}
