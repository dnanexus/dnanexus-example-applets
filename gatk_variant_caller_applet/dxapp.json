{
  "name": "gatk_variant_caller_applet",
  "title": "GATK Variant Caller Applet",
  "summary": "Calls variants from aligned reads",
  "description": "Runs the GATK UnifiedGenotyper on a BAM file to produce a VCF file containing the variant calls",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "details": {
    "contactUrl": "http://wiki.dnanexus.com/Apps/gatk_variant_caller_file_python"
  },
  "resources": [],
  "inputSpec": [
    {
      "label": "BAM File",
      "optional": false,
      "name": "BAM",
      "class": "file"
    },
    {
      "label": "Reference (.gz)",
      "optional": false,
      "name": "reference",
      "class": "file"
    },
    {
      "default": "",
      "label": "Parameters",
      "optional": true,
      "name": "params",
      "class": "string"
    }
  ],
  "outputSpec": [
    {
      "name": "VCF",
      "class": "file"
    }
  ],
  "runSpec": {
    "interpreter": "python2.7",
    "file": "src/gatk_variant_caller_applet.py",
    "execDepends": [{"name": "openjdk-6-jre"}]
  }
}
