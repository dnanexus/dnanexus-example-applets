{
  "name": "crest",
  "title": "CREST",
  "summary": "SV caller",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "tumor_bam",
      "label": "Tumor BAM file",
      "class": "file",
      "optional": false
    },
    {
      "name": "normal_bam",
      "label": "Normal BAM file",
      "class": "file",
      "optional": false
    },
    {
      "name": "reference",
      "label": "Reference Genome (gzipped FASTA)",
      "class": "file"
    },
    {
      "name": "ref_2bit",
      "lable": "Reference Genome (2bit format)",
      "class": "file"
    },
    {
      "name": "params",
      "label": "CREST parameter string",
      "class": "string",
      "optional": true,
      "default": ""
    }
  ],
  "outputSpec": [
    {
      "name": "sv_file",
      "label": "Structural Variant Predictions",
      "class": "file"
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/crest.sh",
    "execDepends":[{"name":"samtools"},
	           {"name":"liblist-moreutils-perl"}]
