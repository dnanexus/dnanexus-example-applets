{
  "name": "bwa_aligner",
  "title": "BWA Aligner",
  "summary": "Aligns reads to a reference genome",
  "description": "Applies the BWA aligner to map reads to a reference genome",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "details": {
    "contactUrl": "http://wiki.dnanexus.com/Apps/bwa"
  },
  "resources": [],
  "inputSpec": [
    {
      "label": "Left Reads",
      "optional": false,
      "name": "left_reads",
      "class": "file"
    },
    {
      "label": "Right Reads",
      "optional": true,
      "name": "right_reads",
      "class": "file"
    },
    {
      "label": "Indexed Reference (.tar.gz)",
      "optional": false,
      "name": "indexed_reference",
      "class": "file"
    },
    {
      "default": "-r '@RG\\tID:1\\tPL:ILLUMINA\\tPU:None\\tLB:1\\tSM:1'",
      "label": "Samse/Sampe Parameters",
      "optional": true,
      "name": "samse_sampe_params",
      "class": "string"
    },
    {
      "default": "",
      "label": "BWA Align Parameters",
      "optional": true,
      "name": "aln_params",
      "class": "string"
    }
  ],
  "outputSpec": [
    {
      "name": "BAM",
      "class": "file"
    }
  ],
  "runSpec": {
    "interpreter": "python2.7",
    "file": "src/bwa_aligner.py"
  }
}
